<p style="color: green"><%= notice %></p>

<% content_for :title, "Clientes" %>

<h1>Clientes</h1>

<div id="clientes">
  <% @clientes.each do |cliente| %>
    <% if cliente.id.present? %>
      <%= render cliente %>
      <p>
        <%= link_to "Show this cliente", cliente %>
      </p>
    <% else %>
      <p>Cliente inválido ou não encontrado.</p>
    <% end %>
  <% end %>
</div>
<%= link_to "New cliente", new_cliente_path %>
